<div class="navbar navbar-expand-sm sticky-top">
  <div class="show-top-main-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill%>')">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="main-container">

  <div class="instructions">
    <h3>How to make:</h3>
    <% @cocktail.doses.each do |dose| %>
      <div class="show-list-item"> <div><%= dose.description%></div><div class="btn-delete"><%= link_to "delete", dose_path(dose.id), method: :delete %></div></div>
    <% end %>
  </div>

  <div class="links">
    <p><%= link_to "back to list", root_path %></p>
    <p><%= link_to "add a dose", new_cocktail_dose_path(@cocktail) %></p>
  </div>
</div>
